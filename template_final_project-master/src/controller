import pygame, sys
pygame.init()
screen_width = 800
screen_height = 800
screen = pygame.display.set_mode((screen_height, screen_width))

def main():
    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit()
        pygame.display.flip()

if __name__ == '__main__':
    main()

